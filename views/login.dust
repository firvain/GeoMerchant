  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/0.8.2/css/flag-icon.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css"> -->
  <!-- <link rel="stylesheet" href="/css/styles.min.css" crossorigin="anonymous"> </head> -->
</head>

<body>
  <div id="root" style="width: 280px; margin: 40px auto; padding: 10px;"> </div>
  <script src="https://cdn.auth0.com/js/lock-7.11.js" type="text/javascript"></script>
  <script type="text/javascript">
  var lock = new Auth0Lock('{env.AUTH0_CLIENT_ID}', '{env.AUTH0_DOMAIN}');
  lock.show({
    container: 'root',
    callbackURL: '{env.AUTH0_CALLBACK_URL}',
    responseType: 'code',
    authParams: {
      scope: 'openid name email picture user_metadata'
    }
  });
  </script>
</body>

</html>
